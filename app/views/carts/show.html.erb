<br>
<h1 class="shopping-cart">Shopping Cart</h1>

<ul class="cart-items" id="class-items">
  <% @cart.line_items.each do |line_item| %>
    <ul>
    <li>Item: <%= line_item.game.title %></li>
    <li>Price: <%= number_to_currency(line_item.game.price) %></li> 
    <li>Quantity: <%= line_item.quantity %></li> 
    <li>Total Price: <%= number_to_currency(line_item.total_price) %></li>
    </ul>

    <ul>
      <li>
        <%= link_to "Remove item", line_item_path(line_item), method: :delete %>
      </li>
    </ul>
    
  <% end %>
</ul>
<h3>Sub total: <%= number_to_currency(@cart.sub_total) %></h3>

</div class="cart-links" id="cart-links">
<%= button_to "Proceed to checkout", new_order_path, method: :get %><br>

<%= button_to "Empty cart", cart_path(@current_cart),method: :delete, data: {confirm: "Are you sure?"}%>
</div>
<h1 class="listing-title"><%= @game.title %></h1>

<div class= "listing-picture">
<% if @game.picture.attached? %>
  <img src="<%=(url_for(@game.picture))%>">
  <%end%>
</div>

<br>

<div class="listing-details">
  <ul class="details-list">
    <li><%= button_to "Add to cart", line_items_path(:game_id => @game.id)%></li>
    <br>
    <li>Price: $<%= @game.price %></li>
    <li>Platform: <%= @game.platform %></li>
    <li>Condition: <%= @game.condition %></li>
    <li>Description: <br> <%= @game.description %></li>
  </ul>
</div>





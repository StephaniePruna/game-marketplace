<h1>Games Trader</h1>
<p>Trade and sell video games</p>

<%= link_to "List Game", new_game_path %>
<br>

<%= form_tag games_path, :method => 'get' do %>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Search" %>
<%end%>

<br>
<% for game in @games %>
<div class="card">  
  <%= image_tag game.picture if game.picture.attached? %>
  <p><a href='/games/<%= game.id %>'>
        <%= game.title %>
      </a></p>
  <p><%= game.price %></p>
  <%= link_to "Edit Listing", edit_game_path(game)%>
   <%= link_to "Delete Listing", game_path(game), method: :delete,
      data: {
        confirm: "Are you sure you want to delete this listing?"
      }
      %>
</div>
<% end %>

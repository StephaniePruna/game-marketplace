
<img class="logo_cover" src="https://rails-game-vault-site-assets.s3-ap-southeast-2.amazonaws.com/games-vault-cover-tiny.png
"/>
<section id ="home">
  <div class="overlay">
    <nav id="navbar" class="nav">
        <ul class="nav-list">
         <li><%= link_to 'Home', games_path %></li>
         <li><%= link_to "List Game", new_game_path %></li>
         <li><%= link_to 'Shopping Cart', cart_path(@current_cart) %></li>
         <li style="float:right"><%= form_tag games_path, :method => 'get' do %>
          <%= text_field_tag :search, params[:search] %>
          <%= submit_tag "Search" %>
          <%end%></li>
        </ul>
    </nav>

  <br>

<div class="devise" id="devise">
  <% if user_signed_in? %>
          <li>Welcome <%= current_user.email %></li>
          <li><%= link_to 'Sign Out', destroy_user_session_path, method: :delete  %></li>
  <% else %>
          <li><%= link_to 'Sign Up', new_user_registration_path %></li><a> Or </a> 
          <li><%= link_to 'Account Login', new_user_session_path %></li>
  <% end %>
</div>
  
<br>
<div class="cards" id="cards">
  <% for game in @games %>

  <div class="game-card" id="game-card">
    <div class="card-img" id="card-img">  
      <%= image_tag game.picture if game.picture.attached? %>
    </div>
  
    <div class="game-name" id="game-name">
      <a href='/games/<%= game.id %>'><%= game.title %></a>
    </div>
  
    <div class="game-price" id="game-price">
      <br> Price: $<%= game.price %>
    </div>

    <div class="icon-group">
      <div class="button" id="button">
      <%= button_to "Add #{game.title} to cart", line_items_path(:game_id => game.id) %>
      <%= button_to "Edit Listing", edit_game_path(game), method: :get %>
      <%= button_to "Delete Listing", game_path(game), method: :delete,
          data: {
            confirm: "Are you sure you want to delete this listing?"
          }
        %>
      </div>
    </div>
</div>
<% end %>



<img class="logo_cover" src="https://rails-game-vault-site-assets.s3-ap-southeast-2.amazonaws.com/games-vault-cover.png
"/>

<section id ="home">
  <div class="overlay">
    <nav id="navbar" class="nav">
        <ul class="nav-list">
         <li><%= link_to 'Home', games_path %></li>
         <li><%= link_to "List Game", new_game_path %></li>
         <li style="float:right"><%= form_tag games_path, :method => 'get' do %>
          <%= text_field_tag :search, params[:search] %>
          <%= submit_tag "Search" %>
          <%end%></li>
        </ul>
    </nav>

<br>
<% for game in @games %>
<div class="responsive">
  <div class="card">  
  <%= image_tag game.picture if game.picture.attached? %>
<div class="description">
  <p><a href='/games/<%= game.id %>'>
      <%= game.title %></a></p>
  <p>Price: $<%= game.price %></p>
  <%= button_to "Add #{game.title} to cart", line_items_path(:game_id => game.id) %>
  <%= button_to "Edit Listing", edit_game_path(game)%> 
  <%= button_to "Delete Listing", game_path(game), method: :delete,
      data: {
        confirm: "Are you sure you want to delete this listing?"
      }
      %>
     </div>
  </div>
</div>

<% end %>
